style {
  .footer {
    padding: 40px 0;
    padding-left: 20px;
    background-color: #fff;
  }

  .footer__title {
    display: block;
    margin-bottom: 15px;

    font-size: 18px;
    font-weight: 700;
  }

  .footer-info {
    display: flex;
    margin-bottom: 10px;
  }

  .footer-contacts {
    width: 250px;
  }

  .footer-contacts__location {
    margin: 0 19px 16px 0;
    display: flex;
    align-items: flex-start;      

    color: #4f4f4f;
    font-size: 14px;
  }

  .footer-contacts__location-icon {
    margin-right: 10px;
  }

  .footer-contacts__phone {
    display: flex;
    align-items: center;
    margin-bottom: 11px;

    color: #4f4f4f;
    font-size: 14px;
  }

  .footer-contacts__phone-icon {
    margin-left: 7px;
    margin-right: 10px;
  }

  .footer-contacts__phone-text {
    color: #4f4f4f;
  }

  .footer-info__text {
    max-width: 560px;

    color: #4f4f4f;
    font-size: 14px;
  }

  .footer-socials {
    display: flex;
  }

  .footer-socials__item {
    margin-right: 10px;
  }

  .footer-socials__item:last-child {
    margin-right: 0;
  }

  .privacy-policy {
    height: 36px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .privacy-policy__text {
    color: #2D9CDB;
    font-size: 14px;
  }

  .privacy-policy__text--gray {
    color: #828282;
  }
}

